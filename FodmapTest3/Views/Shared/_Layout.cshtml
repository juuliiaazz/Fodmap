<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FodmapTest3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FodmapTest3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light f-secondary-color border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Articles" asp-action="Index">Fodmap</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Articles" asp-action="Index">Produkter</a>
                        </li>
                       

                                <div class="dropdown">
                <a class="nav-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Information
                </a>

                     <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <li><a class="dropdown-item" asp-controller="RedFodmaps" asp-action="Index">Lista över röda fodmaps</a></li>
                        <li><a class="dropdown-item" asp-controller="YellowFodmaps" asp-action="Index">Lista över gula fodmaps</a></li>
                    </ul>
                    </div>
                    </ul>

                    

                    @*<form class="search-bar-small p-2" asp-controller="Articles" asp-action="Filter" style="padding-right: 25px;">
                        <input name="searchString" type="text" placeholder="Sök efter en artikel">
                        <button type="submit" class="button button-primary"><i class="fa-solid fa-magnifying-glass fa-sm"></i></button>
                    </form>*@

                </div>
                <partial name="_LoginPartial"/>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Julia Magnusson
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/f617d66e87.js"></script> <!-- Bootstrap ikoner -->



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
